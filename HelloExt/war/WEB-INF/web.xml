<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE web-app
    PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
    "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>

  <!-- Default page to serve -->
  <welcome-file-list>
    <welcome-file>HelloExt.html</welcome-file>
  </welcome-file-list>

  <servlet>
    <servlet-name>dataService</servlet-name>
    <servlet-class>chapter10.helloext.DataServiceImpl</servlet-class>
  </servlet>
  
  <servlet-mapping>
    <servlet-name>dataService</servlet-name>
    <url-pattern>/helloext/data</url-pattern>
  </servlet-mapping>
</web-app>
