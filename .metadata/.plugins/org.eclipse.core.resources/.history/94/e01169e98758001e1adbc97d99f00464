public class ControlTest implements EntryPoint {

	public void onModuleLoad() {
		Tree tree = new Tree();
		tree.setWidth("100px");
		tree.setHeight("10px");
		
		TreeItem item = tree.addItem(new Button("a"));
		item.addItem("level1");
		RootPanel.get().add(tree);
	}
	
	public Widget createCheckableItem(String item) {
		FlowPanel flowPanel = new FlowPanel();
		
	}

}
